<div id="login-modal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Login</h4>
    <form class="col s12" id="login-form">
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="eg. th3Coll4broat0r" id="log_username" type="text" class="validate" required="" aria-required="true">
          <label for="log_username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="log_password" type="password" class="validate" required="" aria-required="true">
          <label for="log_password">Password</label>
        </div>
      </div>
    </form>
    <div class="modal-info">
      <a href="#!">Forgot your password?</a>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!">Don't have an account?</a>
    <button class="btn btn-login" type="submit" form="login-form">login</button>
  </div>
</div>
